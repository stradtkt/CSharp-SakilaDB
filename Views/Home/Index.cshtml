@model IEnumerable<Film>

<div class="row">
    <div class="col-md-10">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Release Year</th>
                    <th>Rating</th>
                    <th>Length (minutes)</th>
                </tr>
            </thead>
            <tbody>
               @foreach(var film in Model)
               {
                    <tr>
                        <td>@film.title</td>
                        <td>@film.description</td>
                        <td>@film.release_year</td>
                        <td>@film.rating</td>
                        <td>@film.length</td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
</div>